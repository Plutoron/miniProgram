<!--index.wxml-->
<view class="container">
  <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
          <view wx:for="{{tracks}}" wx:key="key" wx:if="{{item.name.length < 20}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-id="{{item.id}}" bindtap="setSrc" data-poster="{{item.al.picUrl}}" data-name="{{item.name}}" data-author="{{item.ar[0].name}}">
           
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="{{item.al.picUrl}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">{{item.name}}</view>
                    <view class="weui-media-box__desc">{{item.ar[0].name}}</view>
                </view>
         
          </view>
      </view>
  </view>
</view>
